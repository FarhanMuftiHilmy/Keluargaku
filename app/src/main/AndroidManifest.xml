            android:label="@string/title_activity_settings"
            android:theme="@style/Theme.Keluargaku"/>
        <activity
            android:name=".NotePreviewActivity"
            android:theme="@style/CalendarTheme" />
        <activity
            android:name=".AddNoteActivity"
            android:theme="@style/Theme.Keluargaku" />
        <activity
